  ];

  programs = {
    fish = {
      enable = true;

      loginShellInit = ''
        set -x NIX_PATH nixpkgs=channel:nixos-unstable
        set -x NIX_LOG info
        set -x TERMINAL kitty
      '';

      interactiveShellInit = ''
        neofetch
      '';

      shellAbbrs = {
        ".." = "cd ..";
        "..." = "cd ../..";
        ls = "eza";
        grep = "rg";
        ps = "procs";

        # Git aliases
        gco = "git checkout";
        gcoom = "git commit";
        gcoom-a = "git commit --amend";
        gcoom-ane = "git commit --amend --no-edit";
        gpsh = "git push";
        gpshfwl = "git push --force-with-lease";
        gpff = "git pull --ff-only";
        gst = "git status";
      };
    };
  };
