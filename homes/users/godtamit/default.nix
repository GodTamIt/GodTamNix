  lib,
  pkgs,
  ...
}: {
  godtamnix = {
    user = {
      enable = true;
      name = "godtamit";
      fullName = "Christopher Tam";
      email = lib.godtamnix.decode "b2hnb2R0YW1pdEBnbWFpbC5jb20=";
    };

    programs.graphical.browsers = {
      firefox = {
        enable = true;
        # gpuAcceleration = true;
        # hardwareDecoding = true;
        # setDefault = true;
      };
    };
  };

  home.packages = with pkgs; [
    discord
    neofetch
    signal-desktop

    # Fonts
    fira-code
    fira-code-symbols
    font-awesome
    font-manager
    nerd-fonts.fira-code
